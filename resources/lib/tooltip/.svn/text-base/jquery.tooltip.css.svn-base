#tooltip {
	position: absolute;
	z-index: 3000;
	border: 1px solid #4e96d5;
	background-color: #bed9f1;
	padding: 5px;
	opacity: 0.9;
	color:#1d5ba3;
	border-radius:6px;
	* background:rgba(190, 217, 241, 0.8);
    filter:progid:DXImageTransform.Microsoft.Gradient(GradientType=0, StartColorStr='#bed9f1', EndColorStr='#e7f4ff');
}
#tooltip h3, #tooltip div {font-weight:normal; margin: 0; font-size:14px;font-family:Simsun;/*filter: alpha(opacity=80);*/}
